<%= form_for @project do |f| %>

  <%= render 'layouts/errors', target: @project %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: 'autofocus', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>

<% end %>
